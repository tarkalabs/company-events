rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /events/{eventId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /users/{userId} {
      allow read: if true;
      allow write: if true;
    }
    
    match /feedbacks/{feedbackId} {
      allow read: if true;
      allow write: if request.auth != null || true; // Temporarily allowing all writes for testing
    }
  }
}